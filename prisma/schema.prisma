// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_URL") // Generic Vercel URL
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  name      String?  // Display Name
  password  String // Hashed password
  role      String   @default("USER") // ADMIN, USER
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  transactions Transaction[]
}

model Product {
  id        String   @id @default(cuid())
  name      String
  size      String?
  price     Float
  sku       String   @unique // Barcode
  image     String?  // URL to image
  quantity  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  transactions Transaction[]
  orderItems    OrderItem[]
}

model Transaction {
  id        String   @id @default(cuid())
  type      String   // IN, OUT, ADJUST
  quantity  Int
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Order {
  id        String   @id @default(cuid())
  orderNumber Int    @default(autoincrement())
  
  // Client Info
  clientName    String
  clientPhone   String
  clientCity    String?
  clientStreet  String?
  clientBuilding String?
  clientFlat    String?
  clientNote    String?
  
  // External Integration
  source        String   @default("LOCAL") // LOCAL, KASPI, MOYSKLAD
  externalId    String?  @unique // Kaspi ID or Ms ID
  waybillUrl    String?  // Link to PDF
  
  // Shipping Info
  shippingMethod String // SDEK, YANDEX, POST, ALMATY_COURIER, RIKA_INDRIVE, PICKUP
  sdekUuid      String? // SDEK Order UUID
  sdekNumber    String? // SDEK Waybill Number
  sdekStatus    String? // SDEK Status
  sdekCityCode  Int?    // SDEK City Code for Receiver
  
  status        String   @default("PENDING") // PENDING, PROCESSING, SHIPPED, DELIVERED, CANCELLED
  
  totalAmount   Float
  
  items         OrderItem[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  
  productId String?
  product   Product?  @relation(fields: [productId], references: [id])
  
  name      String   // Snapshot name or Custom name
  sku       String?  // Snapshot sku or Custom sku
  size      String?  // Snapshot size or Custom size
  image     String?  // Snapshot image or Custom image (Base64 compressed)
  
  quantity  Int
  price     Float // Snapshotted price at time of order
}
